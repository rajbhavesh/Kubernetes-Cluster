pipeline {
    agent {label 'node'}
    stages {
        stage('Checkout') { 
            steps {
                checkout([$class: 'GitSCM', branches: [[name: '*/master']], doGenerateSubmoduleConfigurations: false, extensions: [], submoduleCfg: [], userRemoteConfigs: [[url: 'https://github.com/rajbhavesh/Demo.git']]])
            }
        }
        stage('Deploy') { 
            steps {
                sh label: '', script: 'chmod 755 install-kubernetes.sh'
                sh label: '', script: './install-kubernetes.sh'
            }
        }
    }
}
